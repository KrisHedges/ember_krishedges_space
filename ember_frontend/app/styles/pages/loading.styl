#loading
  height 100%
  width 100%
  background linear-gradient( left to top, 100% $deep-purple, 0% darken($purple, 30%))
  color $white
  h4
    position absolute
    width 100%
    top 20%
    text-align center
  &:before
    position absolute
    display block
    top 0
    left 0
    content ''
    min-width 100%
    min-height 100%
    background linear-gradient(right to bottom, 0% rgba($orange, 30%), 20% $orange, 40% $green, 70% $purple, 100% $purple)
    z-index 2
    opacity 0.33
    box-shadow inset 0px 0px 40px 0px $deep-purple
  &:after
    display block
    content ''
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background url("noice.png"), $white
    opacity 0.10
    z-index 3
  svg
    position absolute
    top 40%
    left 50%
    transform-origin(50%, 50%, 0)
    transform translate3d(-50%, -75%, 0)
    width auto !important
    height 15% !important
    max-width 700% !important
    max-height 700% !important
    z-index 4
    opacity 0.9
    backface-visibility hidden
    backface-visibility hidden
    transform-style preserve-3d
    #Regions
      stroke $deep-purple
      #Cerebral-Cortex
        path
          transform scale(1,1)
          transform-origin(50%, 25%, 0)
          opacity 0
          stroke none
          fill $green
          animation synapse-fire 2s infinite
          backface-visibility hidden
          transform-style preserve-3d
      #Visual-Cortex
        path
          transform scale(1,1)
          transform-origin(50%, 50%, 0)
          opacity 0
          fill $orange
          stroke none
          animation synapse-fire 3s infinite
          backface-visibility hidden
          transform-style preserve-3d
      #Auditory-Cortex
        path
          transform scale(1,1)
          transform-origin(40%, 35%, 0)
          opacity 0
          animation synapse-fire 4s infinite
          stroke none
          fill $purple
          backface-visibility hidden
          transform-style preserve-3d
    #Brain
      animation float 4s infinite linear
      transform-origin(50%, 50%, 0)
      backface-visibility hidden
      transform-style preserve-3d
      z-index 4
      path
        stroke $deep-purple !important
