body
  .main-menu
    background linear-gradient(left bottom to right top, 10% lighten($deep-purple, 2%), 100% lighten($deep-purple, 15%))
    opacity 0.88
    font-family $heading_font
    font-weight 600
    letter-spacing 0.05em
    border-bottom 1px solid $deep-black
    box-shadow 0px 0px 4px #111
    .hamburger
      float left
      width 38px
      height 38px
      position relative
      margin 18px 1em 0 1em
      transform rotate(0deg)
      transition all .5s ease-in-out
      cursor pointer
      span
        display block
        position absolute
        height 3px
        width 100%
        background $deep-purple
        border 1px solid $green
        opacity 1
        left 0
        transform rotate(0deg)
        transition .5s ease-in-out
        &:nth-child(1)
          top 0px
          z-index 1
        &:nth-child(2)
          top 12px
          z-index 0
        &:nth-child(3)
          top 24px
          z-index 2
      &.open
        span
          border 0px
          background $green
          &:nth-child(1)
            transform rotate(45deg)
            top 12px
          &:nth-child(2)
            top -6px
            left -1px
            width 100%
            height 100%
            background $deep-purple
            border 1px solid $green
          &:nth-child(3)
            top 12px
            transform rotate(-45deg)

    ul
      display block
      float left
      margin 22px 0 0 3%
      padding 0
      li
        list-style none
        display block
        float left
        margin-right 0.25em
        a
          color $white
          padding 9px 0.5em 10px 0.5em
          text-decoration none
          border 1px solid $purple
          background rgba($purple, 0%)
          transition all 300ms linear
          outline none
          &:active,
          &.active,
          &:hover
            color $green
            border 1px solid $green
            background $deep-purple
    .logo
      display block
      float right
      padding 10px 10px
      margin 12px 3% 0 0
      font-size 15px
      line-height 1.2em
      text-decoration none
      border 1px solid $orange
      color $green
      border 1px solid $green
      background $deep-purple
      cursor pointer
      outline none
      &:before
        display none
        content '^ '
      &.jumpable
        &:before
          display inline

body
  #main
    transition all 160ms linear
  .mobile-menu
    transition all 160ms linear
    background $deep-purple
    ul
      width 100%
      margin 0
      padding 0
      border-top 1px solid $green
      li
        width 100%
        margin 0
        padding 0
        a
          display block
          width 100%
          font-family $heading_font
          font-size 1.6em
          line-height 3.2em
          color $white
          border-bottom 1px solid $green
          padding 0 1.5em
          box-sizing border-box
          &:active,
          &.active,
          &:hover
            color $green
            background $deep-purple
          &.active
            pointer-events none
            &:after
              content ''
              display inline-block
              width 0
              height 0
              margin-left 2em
              border-top 0.35em solid transparent
              border-bottom 0.35em solid transparent
              border-left 0.35em solid $green
  &.mobile-menu-visible
    overflow hidden !important
    #main
      position absolute
      left 100%
      pointer-events none
      overflow hidden
    .mobile-menu
      position absolute
      left 0px
