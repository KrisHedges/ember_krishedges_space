{{#if isAuthenticated }}
  <aside>
    <ul class="menu">
      <li>{{#link-to "index" class="dashboard-link"}}Dashboard{{/link-to}}</li>
      <li>{{#link-to "users"}}Users{{/link-to}}</li>
      <li>{{#link-to "posts"}}Posts{{/link-to}}</li>
      <li>{{#link-to "categories"}}Categories{{/link-to}}</li>
      <li>{{#link-to "uploads"}}Files{{/link-to}}</li>
      {{#if currentUser}}
      <li><a class="logout-link" href="" {{action "logout"}}>Logout</a></li>
      {{/if}}
    </ul>
  </aside>
{{/if}}

{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

{{outlet}}
