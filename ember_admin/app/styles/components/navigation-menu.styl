@keyframes animate-active-arrow
  0%
    right 0.6em
    opacity 0
  100%
    right 0.4em
    opacity 0.3

aside
  border-right 1px solid #ccc
  box-sizing border-box
  font-size 1em
  .menu
    background #666
    li
      margin-top 0px

      a
        background #efefef
        border-bottom 1px solid #ccc
        padding 0.8em 0 0.795em 1em
        text-decoration none
        color #666
        transition background 80ms ease-in-out
        &.active
          background #333
          color #ccc
          text-shadow none
          cursor default
          border-top 1px solid #222
          border-bottom 1px solid #222
          box-shadow inset 0 0 2px #2f2f2f
          z-index 2
          &:hover
          &:active
            background #333
            color #ccc
            text-shadow none
            border-top 1px solid #333
            border-bottom 1px solid #333
        &:active
        &:hover
          background #444
          color #eee
          text-shadow none
          border-bottom 1px solid #444
        &:active
        &:hover
        &.active
          font-weight 100
          &:after
            display block
            position absolute
            top 42%
            right 0.4em
            content ''
            width 0
            height 0
            border-style solid
            border-width 4px 0 4px 6px
            border-color transparent transparent transparent #eee
            opacity 0.3
            z-index 3
            animation animate-active-arrow
            animation-duration 160ms
            animation-iteration-count 1
            animation-direction alternate
            animation-timing-function ease-in-out
        &.dashboard-link
        &.logout-link
          &:after
            display none

