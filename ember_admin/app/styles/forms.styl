button()
  float right
  background linear-gradient(to top, 0% #eee, 100% #ededed)
  color #666
  border 1px solid #bbb
  outline none
  margin 0.25em 0.4em 0.25em 0em
  padding 0.5em 0.7em
  font-weight 100
  font-size 1em
  border-radius 3px
  text-decoration none
  transition all 60ms ease-out
  &.active,
  &:active,
  &:hover
    background #444
    color #efefef
    border 1px solid #3f3f3f
  &.negative
    &:active
    &:hover
      background $red
      border 1px solid darken($red, 10%)
  &.positive
    &:active
    &:hover
      background $green
      border 1px solid darken($green, 10%)
button,
.button
  button()

.add
  button()
  float left
  margin 1em 0.75em 1.8em 0
  &:before
    content ' + '

input, textarea, select
  border 1px solid #ccc
  outline none

input[type="checkbox"],
input[type="text"]
  float left
  margin 0.6em 0.5em 0.5em 0

textarea,
input[type="text"],
input[type="password"],
  display block
  float left
  width 90%
  height auto
  margin 1em 3.5%
  padding 1em

fieldset
  display block
  float left
  width 93%
  height auto
  margin 0 3.5%
  padding 0
  border 0

select
  display block
  float left
  width 93%
  height auto
  margin 1em 3.5%
  height 2.8em

label
  font-weight bold
  float left
  margin 0.5em 0.5em 0.5em 0em

