@import "super-minimal/super-minimal"
@import "colors"
@import "fonts"
@import "base"
@import "forms"
@import "images"

// Layout "The Pig"
body, html
  grid()
  height 100%
  font-size 16px
  & > .ember-view
    height 100%
    &:after
      content ' '
      clear both
      display table
aside
  grid-unit(14%)
  height 100%
  .menu
    grid-unit(100%)
    height 100%
    background #ddd
    li
      grid-unit(100%)
      a
        grid-unit(100%)
        height auto
.page
  grid-unit(86%)
  height 100%

.dashboard
  grid-unit(86%)
  height 100%
  .top-column
    grid-unit(100%)
    padding 0 2%
  .bottom-column
    grid-unit(100%)
    padding 2% 2%
    .block-content
      grid-unit(50%)
      canvas
        display block
        margin 0 10%
        width 80% !important
        max-width 800px
        height auto !important

.post-edit-form
  grid-unit(100%)
  height 100%
  .post-toolbar
    grid-unit(100%)
    height 2.8em
    position absolute
    top 0px
    left 0px
    padding 0 1em
    z-index 20
  .post-editor
    grid-unit(100%)
    height 100%
    .editor
      grid-unit(33%)
      height 100%
  .post-edit-preview
    grid-unit(67%)
    height 100%
    box-sizing border-box
    padding 36px 4%

@import "components/category-select"
@import "components/file-browser"
@import "components/thinking-dots"
@import "components/alerts"
@import "components/login-form"
@import "components/navigation-menu"
@import "components/post-editor"

// Tablet
@media screen and (max-width: 1200px)
  body, html
    font-size 0.9em
